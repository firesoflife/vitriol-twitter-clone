
<%= simple_form_for(@bark) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :bark, label: 'Bark about it', input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label"},placeholder: " Composing a new bark...." %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "button is-info"  %>
  </div>
<% end %>
