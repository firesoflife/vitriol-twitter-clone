<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://versions.bulma.io/0.7.0/images/placeholders/64x64.png" alt="">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'form' %>
    </div>
  </article>


<% @barks.each do | bark | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://versions.bulma.io/0.7.0/images/placeholders/64x64.png" alt="">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong> name </strong> <br>
          <small> username </small> <br>
          <p><%= bark.bark %> </p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to bark, class: 'level-item' do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i> </span>
            <% end %>
            <%= link_to edit_bark_path(bark), class: 'level-item' do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i> </span>
            <% end %>
            <%= link_to bark, method: :delete, data: {confirm: "You are deleting this bark. Proceed?"}, class: 'level-item' do %>
              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i> </span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %> 
</div>