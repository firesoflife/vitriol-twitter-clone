<div class="column is-half">
  <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%+ gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'form' %>
    </div>
  </article>
  <% end %>

<% @barks.each do | bark | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(bark.user.email, size: 64, alt: bark.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong> <%= bark.user.name %> </strong> <br>
          <small> @<%= bark.user.username %> </small> <br>
          <p><%= bark.bark %> </p>
        </div>

        <% if user_signed_in? %>

        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to bark, class: 'level-item' do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i> </span>
            <% end %>
            <%= link_to edit_bark_path(bark), class: 'level-item' do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i> </span>
            <% end %>
            <%= link_to bark, method: :delete, data: {confirm: "You are deleting this bark. Proceed?"}, class: 'level-item' do %>
              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i> </span>
            <% end %>
          </div>
        </nav>
        <% end %>
      </div>
    </article>
  </div>
<% end %> 
</div>